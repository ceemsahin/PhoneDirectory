@using Directory.Enums
@model Directory.Models.UserModel

@{
    ViewData["Title"] = "YeniKisi";
}

<h1>Yeni Kisi Ekle</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="YeniKisi" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <div class="form-group">
                <label asp-for="NameSurname" class="control-label"></label>
                <input asp-for="NameSurname" class="form-control" />
                <span asp-validation-for="NameSurname" class="text-danger"></span>
            </div>
            
    @Html.LabelFor(x => x.category)
    @Html.DropDownList("category", new SelectList(Enum.GetValues(typeof(Category))), "Kategori Seç", new {
    @class = "form-control"
    })

            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input type="number" asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
           <br />
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


